@page "/courses/{CourseId:guid}/lessons"
@using Assesment_tecnico.Shared.Models
@using System.Net.Http.Json
@using System.Text.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>Lessons</PageTitle>

<div class="container mt-4">
    <div class="mb-3">
        <button class="btn btn-secondary" @onclick="BackToCourses">Back to Courses</button>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Lessons for @courseTitle</h1>
        <button class="btn btn-primary" @onclick="ShowCreateModal">Add Lesson</button>
    </div>
    
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger">@ErrorMessage</div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lesson in lessons)
            {
                <tr>
                    <td>@lesson.Order</td>
                    <td>@lesson.Title</td>
                    <td>
                        <button class="btn btn-sm btn-secondary me-1" @onclick='() => ReorderLesson(lesson.Id, "up")' disabled="@(lessons.Count < 2 || lesson.Order == lessons.Min(l => l.Order))">Up</button>
                        <button class="btn btn-sm btn-secondary me-1" @onclick='() => ReorderLesson(lesson.Id, "down")' disabled="@(lessons.Count < 2 || lesson.Order == lessons.Max(l => l.Order))">Down</button>
                        <button class="btn btn-sm btn-info me-1" @onclick="() => EditLesson(lesson)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDeleteLesson(lesson.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@modalTitle</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    @if (isEditing)
                    {
                        <EditForm Model="@updateLessonModel" OnValidSubmit="SaveLesson">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label class="form-label">Title</label>
                                <InputText class="form-control" @bind-Value="updateLessonModel.Title" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Order</label>
                                <InputNumber class="form-control" @bind-Value="updateLessonModel.Order" />
                            </div>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </EditForm>
                    }
                    else
                    {
                        <EditForm Model="@createLessonModel" OnValidSubmit="SaveLesson">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label class="form-label">Title</label>
                                <InputText class="form-control" @bind-Value="createLessonModel.Title" />
                            </div>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@if (showDeleteConfirmation)
{
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" @onclick="() => showDeleteConfirmation = false"></button>
                </div>
                <div class="modal-body">
                    <p>@deleteConfirmationMessage</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showDeleteConfirmation = false">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ExecuteDelete">Confirm Delete</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}


@code {
    [Parameter]
    public Guid CourseId { get; set; }

    private string courseTitle = "";
    private List<Lesson> lessons = new();
    private bool showModal = false;
    private string modalTitle = "";
    private bool isEditing = false;
    private Guid editingLessonId;

    private CreateLessonModel createLessonModel = new();
    private UpdateLessonModel updateLessonModel = new();
    
    private string? ErrorMessage;

    private bool showDeleteConfirmation = false;
    private string deleteConfirmationMessage = "";
    private Guid lessonToDeleteId;

    protected override async Task OnInitializedAsync()
    {
        await LoadCourseDetails();
        await LoadLessons();
    }

    private async Task LoadCourseDetails()
    {
        var course = await Http.GetFromJsonAsync<Course>($"api/courses/{CourseId}");
        if (course != null)
        {
            courseTitle = course.Title;
        }
    }

    private async Task LoadLessons()
    {
        lessons = await Http.GetFromJsonAsync<List<Lesson>>($"api/lessons/course/{CourseId}") ?? new();
    }

    private void BackToCourses()
    {
        NavigationManager.NavigateTo("/courses");
    }

    private void ShowCreateModal()
    {
        ErrorMessage = null;
        isEditing = false;
        createLessonModel = new() { CourseId = CourseId };
        modalTitle = "Add Lesson";
        showModal = true;
    }

    private void EditLesson(Lesson lesson)
    {
        ErrorMessage = null;
        isEditing = true;
        editingLessonId = lesson.Id;
        updateLessonModel = new() { Title = lesson.Title, Order = lesson.Order };
        modalTitle = "Edit Lesson";
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task SaveLesson()
    {
        ErrorMessage = null;
        HttpResponseMessage response;

        if (isEditing)
        {
            response = await Http.PutAsJsonAsync($"api/lessons/{editingLessonId}", updateLessonModel);
        }
        else
        {
            response = await Http.PostAsJsonAsync("api/lessons", createLessonModel);
        }

        if (response.IsSuccessStatusCode)
        {
            showModal = false;
            await LoadLessons();
        }
        else
        {
            await HandleApiError(response);
        }
    }

    private void ConfirmDeleteLesson(Guid lessonId)
    {
        lessonToDeleteId = lessonId;
        if (lessons.Count == 1)
        {
            deleteConfirmationMessage = "This is the last lesson. Deleting it will also delete the course. Are you sure?";
        }
        else
        {
            deleteConfirmationMessage = "Are you sure you want to delete this lesson?";
        }
        showDeleteConfirmation = true;
    }

    private async Task ExecuteDelete()
    {
        showDeleteConfirmation = false;

        var response = await Http.DeleteAsync($"api/lessons/{lessonToDeleteId}");
        if (!response.IsSuccessStatusCode)
        {
            await HandleApiError(response);
            return;
        }

        if (lessons.Count == 1)
        {
            var courseResponse = await Http.DeleteAsync($"api/courses/{CourseId}");
            if (courseResponse.IsSuccessStatusCode)
            {
                NavigationManager.NavigateTo("/courses");
                return;
            }
            else
            {
                await HandleApiError(courseResponse);
            }
        }
        
        await LoadLessons();
    }

    private async Task ReorderLesson(Guid lessonId, string direction)
    {
        var response = await Http.PatchAsync($"api/lessons/{lessonId}/reorder?direction={direction}", null);
        if (response.IsSuccessStatusCode)
        {
            lessons = await response.Content.ReadFromJsonAsync<List<Lesson>>() ?? new();
            StateHasChanged();
        }
        else
        {
            await HandleApiError(response);
        }
    }

    private async Task HandleApiError(HttpResponseMessage response)
    {
        string rawError = await response.Content.ReadAsStringAsync();
        string finalError = "An unknown error occurred.";

        if (string.IsNullOrWhiteSpace(rawError))
        {
            ErrorMessage = finalError;
            return;
        }

        try
        {
            using (JsonDocument doc = JsonDocument.Parse(rawError))
            {
                if (doc.RootElement.TryGetProperty("Message", out JsonElement messageElement))
                {
                    finalError = messageElement.GetString() ?? finalError;
                }
                else if (doc.RootElement.TryGetProperty("title", out JsonElement titleElement))
                {
                    finalError = titleElement.GetString() ?? finalError;
                }
                else
                {
                    finalError = rawError;
                }
            }
        }
        catch (JsonException)
        {
            finalError = rawError;
        }
        
        ErrorMessage = finalError;
    }
}
